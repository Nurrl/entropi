# Install knockd
apt-get install knockd -y

# Create conf file
echo "[options]
  UseSyslog

[SSH]
  sequence = 5438,3428,3280,4479
  tcpflags = syn
  seq_timeout = 12
  start_command = /sbin/iptables -I INPUT 1 -s %IP% -p tcp --dport $sshPort -j ACCEPT
  cmd_timeout = 8
  stop_command = /sbin/iptables -D INPUT -s %IP% -p tcp --dport $sshPort -j ACCEPT" > /etc/knockd.conf

# Enable daemon
sed -i '/START_KNOCKD=/s/.*/START_KNOCKD=1/' /etc/default/knockd
